</div>

      <div class="form-group">
        <label for="pasteventzipcode">Past Event Zip Code:</label>
        <input type="text" id="pasteventzipcode" name="pasteventzipcode" value="<%= event.eventzipcode || '' %>" required/>
      </div>

      <div class="form-group">
        <label for="pasteventparticipants">Participants:</label>
        <input type="number" id="pasteventparticipants" name="pasteventparticipants" value="<%= event.estimatedattendance || '' %>" required/>
      </div>

      <div class="form-group">
        <label for="activity">Past Event Zip Code:</label>
        <input type="text" id="activity" name="activity" value="<%= event.preferredactivity || '' %>" required/>
      </div>

      <div class="form-group">
        <label for="itemsproduced">Items Produced:</label>
        <input type="number" id="itemsproduced" name="itemsproduced" value="<%= event.itemsproduced || '' %>" required/>
      </div>

    <div class="form-group">
        <label for="pockets">Pockets:</label>
        <input type="number" id="pockets" name="pockets" value="<%= event.pockets || '' %>" required/>
    </div>

    <div class="form-group">
        <label for="collars">Collars:</label>
        <input type="number" id="collars" name="collars" value="<%= event.collars || '' %>" required/>
    </div>

    <div class="form-group">
        <label for="envelopes">Envelopes:</label>
        <input type="number" id="envelopes" name="envelopes" value="<%= event.envelopes || '' %>" required/>
    </div>

    <div class="form-group">
        <label for="vests">Vests:</label>
        <input type="number" id="vests" name="vests" value="<%= event.vests || '' %>" required/>
    </div>

    <div class="form-group">
        <label for="completedproducts">Completed Products:</label>
        <input type="number" id="completedproducts" name="completedproducts" value="<%= event.completedproducts || '' %>" required/>
    </div>

    <div class="form-group">
        <label for="updated">Updated:</label>
        <input type="checkbox" id="updated" name="updated" <%= event.updated ? 'checked' : '' %> <%= typeof event.updated === 'undefined' ? '' : 'checked' %> />
    </div>

    <div class="form-group">
        <label for="requestid">Request ID:</label>
        <input type="text" id="requestid" name="requestid" value="<%= event.requestid || '' %>" readonly />
    </div>

      <button type="submit">Submit</button>
      <a href="/eventMaintenance">Cancel</a>
    </form>
  </main>
</body>
</html>
