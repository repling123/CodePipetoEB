<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Maintenance</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        .top-right-button {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <main>
        <a href="/eventPastMaintenance" class="top-right-button">Update/View Past Events</a>
        <h1>Event Maintenance</h1>

        <h2>Pending Event Requests</h2>
        <table>
            <thead>
                <tr>
                    <th>Request ID</th>
                    <th>Contact Name</th>
                    <th>Email</th>
                    <th>Contact Number</th>
                    <th>Event Date</th>
                    <th>Flexible Date</th>
                    <th>Event Start Time</th>
                    <th>Event Length</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zipcode</th>
                    <th>Estimated Attendance</th>
                    <th>Preferred Activity</th>
                    <th>Sufficient SV Machines</th>
                    <th>Number of Sewers</th>
                    <th>Sufficient Tables</th>
                    <th>Table Type</th>
                    <th>Jen's Story</th>
                    <th>Other Info</th>
                    <th>Approved</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% pendingEvents.forEach(event => { %>
                    <tr>
                        <td><%= event.requestid %></td>
                        <td><%= event.contactfirstname %> <%= event.contactlastname %></td>
                        <td><%= event.contactemail %></td>
                        <td><%= event.contactnumber %></td>
                        <td><%= event.eventdate %></td>
                        <td><%= event.flexibledate %></td>
                        <td><%= event.eventstarttime %></td>
                        <td><%= event.eventlength %></td>
                        <td><%= event.eventaddress %></td>
                        <td><%= event.eventcity %></td>
                        <td><%= event.eventstate %></td>
                        <td><%= event.eventzipcode %></td>
                        <td><%= event.estimatedattendance %></td>
                        <td><%= event.preferredactivity %></td>
                        <td><%= event.sufficientsvmachines %></td>
                        <td><%= event.numsewers %></td>
                        <td><%= event.sufficienttables %></td>
                        <td><%= event.tabletype %></td>
                        <td><%= event.jenstory %></td>
                        <td><%= event.otherinfo %></td>
                        <td><%= event.approved %></td>
                        <td>
                            <a href="/editEvent/<%= event.requestid %>">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <h2>Approved Future Events</h2>
        <table>
            <thead>
                <tr>
                    <th>Request ID</th>
                    <th>Contact Name</th>
                    <th>Email</th>
                    <th>Contact Number</th>
                    <th>Event Date</th>
                    <th>Flexible Date</th>
                    <th>Event Start Time</th>
                    <th>Event Length</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zipcode</th>
                    <th>Estimated Attendance</th>
                    <th>Preferred Activity</th>
                    <th>Sufficient SV Machines</th>
                    <th>Number of Sewers</th>
                    <th>Sufficient Tables</th>
                    <th>Table Type</th>
                    <th>Jen's Story</th>
                    <th>Other Info</th>
                    <th>Approved</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% approvedFutureEvents.forEach(event => { %>
                    <tr>
                        <td><%= event.requestid %></td>
                        <td><%= event.contactfirstname %> <%= event.contactlastname %></td>
                        <td><%= event.contactemail %></td>
                        <td><%= event.contactnumber %></td>
                        <td><%= event.eventdate %></td>
                        <td><%= event.flexibledate %></td>
                        <td><%= event.eventstarttime %></td>
                        <td><%= event.eventlength %></td>
                        <td><%= event.eventaddress %></td>
                        <td><%= event.eventcity %></td>
                        <td><%= event.eventstate %></td>
                        <td><%= event.eventzipcode %></td>
                        <td><%= event.estimatedattendance %></td>
                        <td><%= event.preferredactivity %></td>
                        <td><%= event.sufficientsvmachines %></td>
                        <td><%= event.numsewers %></td>
                        <td><%= event.sufficienttables %></td>
                        <td><%= event.tabletype %></td>
                        <td><%= event.jenstory %></td>
                        <td><%= event.otherinfo %></td>
                        <td><%= event.approved %></td>
                        <td>
                            <a href="/editEvent/<%= event.requestid %>">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>
</body>
</html>
