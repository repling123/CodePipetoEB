<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volunteer Maintenance</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="icon" href="/Images/logo.png" type="image/png">
    <style>
        .table-container {
            overflow-x: auto;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <main>
        <a href="/loginLanding" class="top-left-button">Back</a>
        <h1>Volunteer Maintenance</h1>

        <h2>Volunteers</h2>
        <form action="/addVolunteer" method="GET" style="display: flex; justify-content: center; margin: 20px 0;">
            <button class="edit-button" type="submit">Add Volunteer</button>
        </form>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Edit</th>
                        <th>Volunteer ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Zipcode</th>
                        <th>Place Heard</th>
                        <th>Sewing Level</th>
                        <th>Hours per Month</th>
                        <th>Preferred Days</th>
                        <th>Preferred Time</th>
                        <th>Commitment</th>
                        <th>Leadership</th>
                        <th>Teach Sewing</th>
                        <th>Can Travel</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% volunteers.forEach(volunteer => { %>
                        <tr>
                            <td>
                                <form action="/editVolunteer/<%= volunteer.volunteerid %>" method="GET" style="display:inline;">
                                    <button class="edit-button" type="submit">Edit</button>
                                </form>
                            </td>
                            <td><%= volunteer.volunteerid %></td>
                            <td><%= volunteer.volunteerfirstname %></td>
                            <td><%= volunteer.volunteerlastname %></td>
                            <td><%= volunteer.email %></td>
                            <td><%= volunteer.phonenumber %></td>
                            <td><%= volunteer.age %></td>
                            <td><%= volunteer.gender %></td>
                            <td><%= volunteer.address %></td>
                            <td><%= volunteer.city %></td>
                            <td><%= volunteer.state %></td>
                            <td><%= volunteer.zipcode %></td>
                            <td><%= volunteer.placeheard %></td>
                            <td><%= volunteer.sewinglevel %></td>
                            <td><%= volunteer.hourspermonth %></td>
                            <td><%= volunteer.preferreddays %></td>
                            <td><%= volunteer.preferredtime %></td>
                            <td><%= volunteer.commitment %></td>
                            <td><%= volunteer.leadership %></td>
                            <td><%= volunteer.teachsewing %></td>
                            <td><%= volunteer.cantravel %></td>
                            <td>
                                <form action="/deleteVolunteer/<%= volunteer.volunteerid %>" method="POST" style="display:inline;">
                                    <button class="delete-button" type="submit" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>
</body>
</html>