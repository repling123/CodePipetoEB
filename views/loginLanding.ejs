<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* Inline CSS for header layout */
    header {
      position: relative;
      height: 100vh;
      background: url('/Images/Home-Page-Header.jpg') no-repeat center center;
      background-size: cover;
      background-attachment: fixed;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      padding-top: 40px;
      background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), 
                        url('/Images/Home-Page-Header.jpg');
    }

    .header-text {
      text-align: center;
      margin-bottom: 20px;
    }

    .header-text .main-title {
      font-size: 2.5rem;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 2px;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .header-text .tagline {
      font-size: 1.2rem;
      font-style: italic;
      color: #000000;
    }

    #login-box, #links, .tableau-container {
      display: none; /* Hidden by default */
    }

    #login-box {
      display: block; /* Login box is visible initially */
      max-width: 400px;
      width: 90%;
      background-color: white;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      text-align: center;
      margin: 0 auto;
    }

    #login-box.hidden, #links.hidden, .tableau-container.hidden {
      display: none;
    }

    #login-box label {
      display: block; /* Make labels block elements */
      color: black; /* Change label text color to black */
      margin-bottom: 5px; /* Add some space below the labels */
    }

    #login-box input {
      display: block; /* Make inputs block elements */
      width: 100%; /* Make inputs take full width */
      color: black; /* Change input text color to black */
      margin-bottom: 15px; /* Add some space below the inputs */
      padding: 10px; /* Add padding to inputs */
      border: 1px solid #ccc; /* Add border to inputs */
      border-radius: 5px; /* Add border radius to inputs */
      box-sizing: border-box; /* Include padding and border in element's total width and height */
    }

    #links ul {
      list-style: none;
      padding: 0;
    }

    #links ul li a {
      display: block;
      margin: 10px auto;
      width: 200px;
      text-align: center;
      padding: 10px;
      background-color: #007bff;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      font-size: 1rem;
      transition: background-color 0.3s;
    }

    #links ul li a:hover {
      background-color: #0056b3;
    }

    .tableau-container {
      margin: 20px auto;
      width: 100%;
      max-width: 1200px;
      text-align: center;
    }

    .tableau-container #tableauViz {
      width: 100%;
      height: 600px;
      border: 1px solid #ddd;
    }

    .hidden {
      display: none;
    }

  </style>
</head>
<body>
  <header>
    <nav>
      <a href="/">Home</a>
    </nav>
    <div class="header-text">
      <h1 id="main-title" class="main-title">Welcome</h1>
      <p id="tagline" class="tagline">Please log in to continue.</p>
    </div>

    <!-- Login box -->
    <div id="login-box">
      <form id="login-form" action="/login" method="POST">
        <h2>Login</h2>
        <p id="error-message" class="error-message" style="display: none;">Username or password is incorrect</p>
        <label for="username">Username</label>
        <input type="text" id="username" name="username" required>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
        <button type="submit" class="learn-more-btn">Login</button>
      </form>
    </div>

    <!-- Links section -->
    <div id="links" class="hidden">
      <ul>
        <li><a href="/adminMaintenance" class="learn-more-btn">Admin Maintenance</a></li>
        <li><a href="/volunteerMaintenance" class="learn-more-btn">Volunteer Maintenance</a></li>
        <li><a href="/eventMaintenance" class="learn-more-btn">Event Maintenance</a></li>
      </ul>
    </div>
  </header>

  <!-- Tableau Dashboard Section -->
  <div class="tableau-container hidden" id="tableau-section">
    <h2>Dashboard</h2>
    <div id="tableauViz"></div>
  </div>

  <script>
    const form = document.getElementById('login-form');
    const errorMessage = document.getElementById('error-message');
    const links = document.getElementById('links');
    const loginBox = document.getElementById('login-box');
    const tableauSection = document.getElementById('tableau-section');
    const tagline = document.getElementById('tagline');
    const mainTitle = document.getElementById('main-title');

    form.addEventListener('submit', async (e) => {
      e.preventDefault(); // Prevent form submission

      const username = document.getElementById('username').value;
      const password = document.getElementById('password').value;

      try {
        const response = await fetch('/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ username, password }),
        });

        const data = await response.json();

        if (data.success) {
          // Hide login box
          loginBox.classList.add('hidden');

          // Show links and tableau section
          links.classList.remove('hidden');
          tableauSection.classList.remove('hidden');

          // Update header text
          tagline.textContent = 'View the data below';
          mainTitle.textContent = 'Welcome back';

          // Initialize Tableau
          initTableau();
        } else {
          errorMessage.textContent = data.message || 'Invalid login credentials.';
          errorMessage.style.display = 'block';
        }
      } catch (error) {
        // Handle unexpected errors
        errorMessage.textContent = 'An unexpected error occurred.';
        errorMessage.style.display = 'block';
      }
    });

    function initTableau() {
      const placeholderDiv = document.getElementById('tableauViz');
      const url = 'https://public.tableau.com/views/Intex_17333558878840/Dashboard1';
      const options = {
        width: placeholderDiv.offsetWidth,
        height: 600,
        hideTabs: true,
        hideToolbar: true,
      };
      new tableau.Viz(placeholderDiv, url, options);
    }
  </script>
  <script src="https://public.tableau.com/javascripts/api/tableau-2.min.js"></script>
</body>
</html>