<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Past Event</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    form {
      width: 50%;
      margin: 20px auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 10px;
      background-color: #f9f9f9;
    }

    .form-group {
      margin-bottom: 12px;
    }

    label {
      display: block;
      font-weight: bold;
      margin-bottom: 8px;
    }

    input, select, textarea {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
      background-color: white;
    }

    input[type="checkbox"] {
      width: auto;
      margin-right: 5px;
    }

    
  </style>
</head>
<body>
  <main>
    <h1>Edit Past Event</h1>
    <form action="/editPastEvent/<%= event.requestid %>" method="POST">
      <div class="form-group">
        <label for="pasteventdate">Past Event Date:</label>
        <input type="date" id="pasteventdate" name="pasteventdate" value="<%= event.pasteventdate.toISOString().split('T')[0] %>" required />
      </div>

      <div class="form-group">
        <label for="pasteventtime">Past Event Time:</label>
        <input type="time" id="pasteventtime" name="pasteventtime" value="<%= event.pasteventtime %>" required />
      </div>

      <div class="form-group">
        <label for="eventdurationhours">Event Duration (in hours):</label>
        <input type="number" id="eventdurationhours" name="eventdurationhours" value="<%= event.eventdurationhours %>" required />
      </div>

      <div class="form-group">
        <label for="pasteventaddress">Past Event Address:</label>
        <input type="text" id="pasteventaddress" name="pasteventaddress" value="<%= event.pasteventaddress %>" required />
      </div>

      <div class="form-group">
        <label for="pasteventcity">Past Event City:</label>
        <input type="text" id="pasteventcity" name="pasteventcity" value="<%= event.pasteventcity %>" required />
      </div>

      <div class="form-group">
        
        <label for="pasteventstate">Past Event State:</label>
        <select id="pasteventstate" name="pasteventstate" required>
            <option value="AL" <%= event.pasteventstate === 'AL' ? 'selected' : '' %>>Alabama</option>
            <option value="AK" <%= event.pasteventstate === 'AK' ? 'selected' : '' %>>Alaska</option>
            <option value="AZ" <%= event.pasteventstate === 'AZ' ? 'selected' : '' %>>Arizona</option>
            <option value="AR" <%= event.pasteventstate === 'AR' ? 'selected' : '' %>>Arkansas</option>
            <option value="CA" <%= event.pasteventstate === 'CA' ? 'selected' : '' %>>California</option>
            <option value="CO" <%= event.pasteventstate === 'CO' ? 'selected' : '' %>>Colorado</option>
            <option value="CT" <%= event.pasteventstate === 'CT' ? 'selected' : '' %>>Connecticut</option>
            <option value="DE" <%= event.pasteventstate === 'DE' ? 'selected' : '' %>>Delaware</option>
            <option value="FL" <%= event.pasteventstate === 'FL' ? 'selected' : '' %>>Florida</option>
            <option value="GA" <%= event.pasteventstate === 'GA' ? 'selected' : '' %>>Georgia</option>
            <option value="HI" <%= event.pasteventstate === 'HI' ? 'selected' : '' %>>Hawaii</option>
            <option value="ID" <%= event.pasteventstate === 'ID' ? 'selected' : '' %>>Idaho</option>
            <option value="IL" <%= event.pasteventstate === 'IL' ? 'selected' : '' %>>Illinois</option>
            <option value="IN" <%= event.pasteventstate === 'IN' ? 'selected' : '' %>>Indiana</option>
            <option value="IA" <%= event.pasteventstate === 'IA' ? 'selected' : '' %>>Iowa</option>
            <option value="KS" <%= event.pasteventstate === 'KS' ? 'selected' : '' %>>Kansas</option>
            <option value="KY" <%= event.pasteventstate === 'KY' ? 'selected' : '' %>>Kentucky</option>
            <option value="LA" <%= event.pasteventstate === 'LA' ? 'selected' : '' %>>Louisiana</option>
            <option value="ME" <%= event.pasteventstate === 'ME' ? 'selected' : '' %>>Maine</option>
            <option value="MD" <%= event.pasteventstate === 'MD' ? 'selected' : '' %>>Maryland</option>
            <option value="MA" <%= event.pasteventstate === 'MA' ? 'selected' : '' %>>Massachusetts</option>
            <option value="MI" <%= event.pasteventstate === 'MI' ? 'selected' : '' %>>Michigan</option>
            <option value="MN" <%= event.pasteventstate === 'MN' ? 'selected' : '' %>>Minnesota</option>
            <option value="MS" <%= event.pasteventstate === 'MS' ? 'selected' : '' %>>Mississippi</option>
            <option value="MO" <%= event.pasteventstate === 'MO' ? 'selected' : '' %>>Missouri</option>
            <option value="MT" <%= event.pasteventstate === 'MT' ? 'selected' : '' %>>Montana</option>
            <option value="NE" <%= event.pasteventstate === 'NE' ? 'selected' : '' %>>Nebraska</option>
            <option value="NV" <%= event.pasteventstate === 'NV' ? 'selected' : '' %>>Nevada</option>
            <option value="NH" <%= event.pasteventstate === 'NH' ? 'selected' : '' %>>New Hampshire</option>
            <option value="NJ" <%= event.pasteventstate === 'NJ' ? 'selected' : '' %>>New Jersey</option>
            <option value="NM" <%= event.pasteventstate === 'NM' ? 'selected' : '' %>>New Mexico</option>
            <option value="NY" <%= event.pasteventstate === 'NY' ? 'selected' : '' %>>New York</option>
            <option value="NC" <%= event.pasteventstate === 'NC' ? 'selected' : '' %>>North Carolina</option>
            <option value="ND" <%= event.pasteventstate === 'ND' ? 'selected' : '' %>>North Dakota</option>
            <option value="OH" <%= event.pasteventstate === 'OH' ? 'selected' : '' %>>Ohio</option>
            <option value="OK" <%= event.pasteventstate === 'OK' ? 'selected' : '' %>>Oklahoma</option>
            <option value="OR" <%= event.pasteventstate === 'OR' ? 'selected' : '' %>>Oregon</option>
            <option value="PA" <%= event.pasteventstate === 'PA' ? 'selected' : '' %>>Pennsylvania</option>
            <option value="RI" <%= event.pasteventstate === 'RI' ? 'selected' : '' %>>Rhode Island</option>
            <option value="SC" <%= event.pasteventstate === 'SC' ? 'selected' : '' %>>South Carolina</option>
            <option value="SD" <%= event.pasteventstate === 'SD' ? 'selected' : '' %>>South Dakota</option>
            <option value="TN" <%= event.pasteventstate === 'TN' ? 'selected' : '' %>>Tennessee</option>
            <option value="TX" <%= event.pasteventstate === 'TX' ? 'selected' : '' %>>Texas</option>
            <option value="UT" <%= event.pasteventstate === 'UT' ? 'selected' : '' %>>Utah</option>
            <option value="VT" <%= event.pasteventstate === 'VT' ? 'selected' : '' %>>Vermont</option>
            <option value="VA" <%= event.pasteventstate === 'VA' ? 'selected' : '' %>>Virginia</option>
            <option value="WA" <%= event.pasteventstate === 'WA' ? 'selected' : '' %>>Washington</option>
            <option value="WV" <%= event.pasteventstate === 'WV' ? 'selected' : '' %>>West Virginia</option>
            <option value="WI" <%= event.pasteventstate === 'WI' ? 'selected' : '' %>>Wisconsin</option>
            <option value="WY" <%= event.pasteventstate === 'WY' ? 'selected' : '' %>>Wyoming</option>
        </select>

      </div>

      <div class="form-group">
        <label for="pasteventzipcode">Past Event Zip Code:</label>
        <input type="text" id="pasteventzipcode" name="pasteventzipcode" value="<%= event.pasteventzipcode %>" required />
      </div>

      <div class="form-group">
        <label for="pasteventparticipants">Past Event Participants:</label>
        <input type="number" id="pasteventparticipants" name="pasteventparticipants" value="<%= event.pasteventparticipants %>" required />
      </div>

      <div class="form-group">
        <label for="itemsproduced">Items Produced:</label>
        <input type="number" id="itemsproduced" name="itemsproduced" value="<%= event.itemsproduced %>" required />
      </div>

      <div class="form-group">
        <label for="pockets">Pockets:</label>
        <input type="number" id="pockets" name="pockets" value="<%= event.pockets %>" required />
      </div>

      <div class="form-group">
        <label for="collars">Collars:</label>
        <input type="number" id="collars" name="collars" value="<%= event.collars %>" required />
      </div>

      <div class="form-group">
        <label for="envelopes">Envelopes:</label>
        <input type="number" id="envelopes" name="envelopes" value="<%= event.envelopes %>" required />
      </div>

      <div class="form-group">
        <label for="vests">Vests:</label>
        <input type="number" id="vests" name="vests" value="<%= event.vests %>" required />
      </div>

      <div class="form-group">
        <label for="completedproducts">Completed Products:</label>
        <input type="number" id="completedproducts" name="completedproducts" value="<%= event.completedproducts %>" required />
      </div>

      <div class="form-group">
        <label for="updated">
          <input type="checkbox" id="updated" name="updated" value="true" <%= event.updated ? 'checked' : '' %>> Updated
        </label>
      </div>
      
      <button class="edit-button" type="submit">Save Changes</button>
      <a class="delete-button" href="/eventPastMaintenance">Cancel</a>
    </form>
  </main>
</body>
</html>
